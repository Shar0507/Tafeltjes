Werkende Fibonacci Code:

<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="UTF-8">
    <title>Fibonacci automaat</title>
</head>
<body>

    <h2>Fibonacci automaat</h2>

    <form method="POST">
        Voer getal in: 
           <input type="number" name="n" min="1" max=
           "12" required>
           <input type="submit" name="action" value="toon">
         <input type="submit" name="action" value="reset">
 </form>

    <?php
    if ($_SERVER["REQUEST_METHOD"] === "POST") {
          if($_POST['action'] === "toon") {
         $n = intval($_POST["n"]);
      if ($n > 0) {
    echo "<table border='10' cellpadding='10'>";

                 echo "<tr><th>Tafel van</th>";
                for ($i = 1; $i <= $n; $i++) {
            echo "<th>$i</th>";
            }
             echo "</tr>";

            for ($i = 1; $i <= $n; $i++) {
             echo "<tr>";
                    echo "<th>$i</th>"; 
             for ($j = 1; $j <= $n; $j++) {
                    echo "<td>" . ($i * $j) . "</td>";
                }
                echo "</tr>";
            }

            echo "</table>";
        } else {
            echo "<p>is gereset!</p>";
        }
           }
    }
    ?>

</body>

</html>
